{
    "compilerOptions": {
        "target": "es6",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "strict": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "types": ["node", "jest", "@types/express", "@types/cors", "@types/body-parser", "@types/compression"]
}